{
  "openapi": "3.0.1",
  "info": {
    "title": "CurrencyChangeAPI",
    "version": "1.0"
  },
  "paths": {
    "/api/getchange": {
      "get": {
        "tags": [
          "Change"
        ],
        "parameters": [
          {
            "name": "paidAmount",
            "in": "query",
            "schema": {
              "type": "number",
              "format": "double"
            }
          },
          {
            "name": "productPrice",
            "in": "query",
            "schema": {
              "type": "number",
              "format": "double"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ChangeResponse"
                },
                "example": {"message":"Your change is:","change":["1 x £20","1 x £2","1 x £1","1 x 50p","1 x 10p","1 x 5p"]}
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ChangeResponse"
                },
                "example": {"message":"Your change is:","change":["1 x £20","1 x £2","1 x £1","1 x 50p","1 x 10p","1 x 5p"]}
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ChangeResponse"
                },
                "example": {"message":"Your change is:","change":["1 x £20","1 x £2","1 x £1","1 x 50p","1 x 10p","1 x 5p"]}
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                },
                "example": "Paid amount is less than the product price."
              },
              "application/json": {
                "schema": {
                  "type": "string"
                },
                "example": "Paid amount is less than the product price."
              },
              "text/json": {
                "schema": {
                  "type": "string"
                },
                "example": "Paid amount is less than the product price."
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ChangeResponse": {
        "required": [
          "change",
          "message"
        ],
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "nullable": true
          },
          "change": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}